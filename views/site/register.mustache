<div class="site-login">
    <h1>{{customer.title}}</h1>

    <p>Please fill out the following fields to register:</p>

    <form id="register-form" class="form-horizontal" action="/web/site/register" method="post">
        <input type="hidden" name="_csrf" value="{{app.request.getCsrfToken()}}">
        <div class="form-group field-customer-name">
            <label class="col-lg-1 control-label" for="customer-name">Name</label>
            <div class="col-lg-3"><input type="text" id="customer-name" class="form-control" name="Customer[name]" value="{{customer.name}}"></div>
            <div class="col-lg-8"><div class="help-block"></div></div>
        </div><div class="form-group field-customer-email required">
            <label class="col-lg-1 control-label" for="customer-email">Email</label>
            <div class="col-lg-3"><input type="text" id="customer-email" class="form-control" name="Customer[email]" aria-required="true" value="{{customer.email}}"></div>
            <div class="col-lg-8"><div class="help-block"></div></div>
        </div><div class="form-group field-customer-password required">
            <label class="col-lg-1 control-label" for="customer-password">Password</label>
            <div class="col-lg-3"><input type="password" id="customer-password" class="form-control" name="Customer[password]" aria-required="true" value="{{customer.password}}"></div>
            <div class="col-lg-8"><div class="help-block"></div></div>
        </div><div class="form-group field-customer-password_repeat">
            <label class="col-lg-1 control-label" for="customer-password_repeat">Password Repeat</label>
            <div class="col-lg-3"><input type="password" id="customer-password_repeat" class="form-control" name="Customer[password_repeat]" value="{{customer.password}}"></div>
            <div class="col-lg-8"><div class="help-block"></div></div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-1 col-lg-11">
                <button type="submit" class="btn btn-primary" name="register-button">Register</button>
                <a href="/web/site/login">Login</a>
            </div>
        </div>
    </form>
</div>